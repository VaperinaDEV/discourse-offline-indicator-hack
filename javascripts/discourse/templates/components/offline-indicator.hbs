{{#if this.showing}}
  <div class="offline-indicator">
    <div class="offline-indicator--icon">
      {{d-icon "wifi"}}
      {{d-icon "slash"}}
    </div>
    <span>{{i18n "offline_indicator.no_internet"}}</span>
    <DButton
      @label="offline_indicator.refresh_page"
      @display="link"
      @action={{this.refresh}}
    />
  </div>
{{/if}}